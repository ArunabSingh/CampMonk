<% layout('layouts/boilerplate')%>

<div class="row">
    <div style="width:fit-content; margin-left:15%; margin-right: 15%;">
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading"><%= err.message %></h4>
            <% if (process.env.NODE_ENV !== "production") { %>
            <p><%= err.stack %></p>
            <% } %>
        </div>
    </div>
</div>